<Defs>

		<ThingDef Name="MainWeaponBase"  ParentName="BaseHumanMakeableGun" Abstract="True">
			<weaponTags>
				<li>Gun</li>
			</weaponTags>
			<tradeTags>
				<li>WeaponRanged</li>
			</tradeTags>
		</ThingDef>

	
	
	<ThingDef ParentName="MainWeaponBase">
		<defName>AD_Tempest</defName>
		<label>Tempest</label>
		<description>A high-voltage beam weapon that discharges arcs of electricity, chaining across multiple targets. Powered directly from the electrical grid.</description>
		<graphicData>
			<texPath>Things/Item/Tempest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.2,1.2)</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<techLevel>Industrial</techLevel>
		<weaponClasses>
			<li>ShortShots</li>
			<li>RangedLight</li>
		</weaponClasses>
		<recipeMaker>
			<researchPrerequisite>ShutDownProtocol</researchPrerequisite>
			<skillRequirements>
				<Crafting>10</Crafting>
			</skillRequirements>
		</recipeMaker>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<statBases>
			<Mass>4.55</Mass>
			<RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
			<SightsEfficiency>2.60</SightsEfficiency>
			<ShotSpread>0.05</ShotSpread>
			<SwayFactor>1.14</SwayFactor>
			<Bulk>11.73</Bulk>
			<WorkToMake>31500</WorkToMake>
		</statBases>
		<costList>
			<Steel>230</Steel>
			<ComponentIndustrial>12</ComponentIndustrial>
			<Chemfuel>15</Chemfuel>
		</costList>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>0.6</recoilAmount>
				<verbClass>ActiveDefense.Verb_TempestShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_TempestArc</defaultProjectile>
				<warmupTime>3</warmupTime>
				<minRange>2</minRange>
				<range>30</range>
				<soundCast>TempestBolt_Cast</soundCast>
			</li>
		</verbs>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.02</cooldownTime>
				<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<chanceFactor>3</chanceFactor>
				<cooldownTime>2.05</cooldownTime>
				<armorPenetrationBlunt>12.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<amount>20</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
		</tools>
		<weaponTags>
			<li>SniperRifle</li>
			<li>CE_AI_SR</li>
		</weaponTags>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="ActiveDefense.CompProperties_EnergyConsumption">
				<BaseEnergyMag>100</BaseEnergyMag>
				<BaseEnergyConsumptionPerShot>25</BaseEnergyConsumptionPerShot>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiAimMode>AimedShot</aiAimMode>
				<aiUseBurstMode>TRUE</aiUseBurstMode>
			</li>
		</comps>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawSize>1.2,1.2</DrawSize>
				<DrawOffset>-0.1,0.05</DrawOffset>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>